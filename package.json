{
  "name": "gear-tracker",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "vite dev",
    "gen:db-schemas": "bun scripts/data-schemas.ts && eslint ./src/lib/database/schema.g.ts --fix --quiet",
    "gen:db-types": "bun supabase gen types --lang typescript --local > ./src/lib/database/types.g.ts && eslint --fix ./src/lib/database/types.g.ts",
    "gen:i18n": "bunx @inlang/paraglide-js compile --project './inlang' --outdir './src/lib/i18n'",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "svelte-kit sync || echo ''",
    "preview": "vite preview",
    "test": "npm run test:unit -- --run",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@inlang/paraglide-js": "2.2.0",
    "@lucide/svelte": "^0.525.0",
    "bits-ui": "2.8.10",
    "pg": "8.16.3",
    "valibot": "1.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.16.2",
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@supabase/ssr": "0.6.1",
    "@supabase/supabase-js": "2.50.5",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/kit": "^2.22.5",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/pg": "8.15.4",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-perfectionist": "4.15.0",
    "eslint-plugin-svelte": "^3.10.1",
    "eslint-plugin-svelte-sort-attributes": "1.1.5",
    "eslint-plugin-svelte-tailwindcss": "1.1.0",
    "globals": "^16.3.0",
    "playwright": "^1.54.1",
    "supabase": "2.30.4",
    "svelte": "^5.35.6",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.0.0"
  }
}
